<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Salma.ContentLoadingProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">#FFD100</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="Theme.Salma.Button.CardButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/cardButtonBackgroundColor</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">?attr/cardButtonTextColor</item>
        <item name="iconTint">?attr/cardButtonIconColor</item>
        <item name="android:textSize">@dimen/card_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:minHeight">@dimen/card_button_height</item>
    </style>

    <style name="Theme.Salma.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/inComingMessageBackgroundColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">?attr/inComingMessageTextColor</item>
        <item name="iconTint">?attr/inComingMessageBackgroundColor</item>
        <item name="android:textSize">@dimen/card_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:minHeight">@dimen/card_button_height</item>
    </style>

    <style name="Theme.Salma.ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of Toolbar -->
        <item name="colorControlNormal">?attr/titleTextColor</item>
        <item name="android:background">?attr/toolbarBackgroundColor</item>
        <item name="background">?attr/toolbarBackgroundColor</item>
    </style>


    <!--    CardView Style-->
    <style name="Theme.Salma.CardView.OutComingMessage" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/outComingMessageBackgroundColor</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="Theme.Salma.CardView.InComingMessage" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/inComingMessageBackgroundColor</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="Theme.Salma.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/Theme.Salma.MaterialAlertDialog.Title
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/Theme.Salma.MaterialAlertDialog.Body
        </item>
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">?attr/accentColor</item>
        <item name="colorOnSurface">#ffffff</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.Salma.MaterialAlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="Theme.Salma.MaterialAlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="fontFamily">@font/font_regular</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/accentColor</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/accentColor</item>
    </style>

    <style name="windowNoTitle" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="Theme.Salma.BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Salma.BottomSheetDialog.AppModalStyle
        </item>
    </style>

    <style name="Theme.Salma.BottomSheetDialog.AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/masa_bottom_sheet_bg</item>
        <!--        <item name="behavior_peekHeight">500dp</item>-->
    </style>

    <style name="Theme.Salma.OutlinedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/outlined_edit_text_selector</item>
        <item name="android:textColorHint">?attr/textFieldHintTextColor</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textColor">?attr/textFieldTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="Theme.Salma.Chip" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textAppearance">@style/Theme.Salma.ChipText</item>
        <item name="android:textColor">?attr/chipTextColor</item>
        <item name="chipStrokeColor">?attr/chipTextColor</item>
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="iconStartPadding">@dimen/small_margin</item>

    </style>

    <style name="Theme.Salma.ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

</resources>