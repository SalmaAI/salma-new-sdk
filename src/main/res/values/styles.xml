<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Salma.ContentLoadingProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">#FFD100</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="Theme.Salma.Button.CardButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/cardButtonBackgroundColor</item>
        <item name="cornerRadius">@dimen/cardButtonRadius</item>
        <item name="android:textColor">?attr/cardButtonTextColor</item>
        <item name="iconTint">?attr/cardButtonIconColor</item>
        <item name="android:textSize">@dimen/card_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/almarai_regular</item>
        <item name="android:minHeight">@dimen/card_button_height</item>
    </style>

    <!--    CardView Style-->
    <style name="Theme.Salma.CardView.OutComingMessage" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/outComingMessageBackgroundColor</item>
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="Theme.Salma.CardView.InComingMessage" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/inComingMessageBackgroundColor</item>
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="Theme.MobileBanking.JKB.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/Theme.MobileBanking.JKB.MaterialAlertDialog.Title
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/Theme.MobileBanking.JKB.MaterialAlertDialog.Body
        </item>
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">?attr/accentColor</item>
        <item name="colorOnSurface">#ffffff</item>
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="fontFamily">@font/almarai_regular</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.MobileBanking.JKB.MaterialAlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/almarai_bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="Theme.MobileBanking.JKB.MaterialAlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="fontFamily">@font/almarai_regular</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/accentColor</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/accentColor</item>
    </style>

    <style name="windowNoTitle" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_width">wrap_content</item>

    </style>
</resources>