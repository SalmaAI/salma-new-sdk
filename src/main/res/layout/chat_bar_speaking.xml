<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvGrpcText"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:gravity="center_vertical"
        android:textColor="?attr/secondaryColor"
        android:textSize="16sp"
        app:fontFamily="@font/font_bold"
        android:minLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/aviSpeaking"
        app:layout_constraintEnd_toStartOf="@+id/aviSpeaking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/aviSpeaking"
        tools:text="ما هي مزايا القرض الشخصي ما هي مزايا القرض الشخصي ما هي مزايا القرض الشخصي ما هي مزايا القرض الشخصي" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/aviSpeaking"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        app:indicatorColor="?attr/secondaryColor"
        app:indicatorName="BallScaleIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>