<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="quickReply"
            type="ai.mawdoo3.salma.data.dataModel.MessageResponse.MessageContentResponse.Element" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_border"
            android:padding="10dp"
            android:text="@{quickReply.title}"
            android:textColor="?attr/titleTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ما هي آخر عمليات شراء قمت بها؟" />

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_replies_more"
            android:textColor="?attr/titleTextColor"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/tvText"
            app:layout_constraintTop_toBottomOf="@+id/tvText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
