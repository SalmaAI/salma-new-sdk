<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="quickReply"
            type="ai.mawdoo3.salma.data.dataModel.MessageResponse.MessageContentResponse.Element" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quick_reply_border"
            android:padding="@dimen/small_margin"
            android:text="@{quickReply.title}"
            android:textSize="@dimen/card_text_size"
            android:textColor="?attr/inComingMessageTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ما هي آخر عمليات شراء قمت بها؟" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
