<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="48dp"
        android:layout_margin="@dimen/small_margin"
        android:layout_gravity="center"
        android:visibility="visible"
        app:borderWidth="0dp"
        android:clickable="false"
        app:tint="@null"
        android:src="@drawable/ic_volume_mute"
        android:backgroundTint="?attr/actionButtonBackgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/etMessage"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/small_margin"
        android:background="@drawable/edit_text_bg"
        android:padding="@dimen/medium_margin"
        android:paddingStart="@dimen/small_margin"
        android:textAlignment="viewStart"
        android:textColor="?attr/textFieldTextColor"
        android:textColorHint="?attr/textFieldHintTextColor"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textSize="@dimen/edittext_text_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/fab_mute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fab_mute"
        app:layout_constraintTop_toTopOf="@+id/fab_mute" />
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/aviPlayingAudio"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        app:indicatorColor="?attr/secondaryColor"
        android:visibility="gone"
        app:indicatorName="LineScalePulseOutIndicator"
        app:layout_constraintBottom_toBottomOf="@+id/fab_mute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fab_mute" />
</androidx.constraintlayout.widget.ConstraintLayout>