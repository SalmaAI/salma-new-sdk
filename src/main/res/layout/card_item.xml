<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="card"
            type="ai.mawdoo3.salma.data.dataModel.CardUiModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Theme.Salma.CardView.InComingMessage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_view_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/small_margin"
                android:fontFamily="@font/font_bold"
                android:text="@{card.name}"
                android:textColor="?attr/titleTextColor"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="بطاقة الدفع المباشر" />

            <TextView
                android:id="@+id/tvCardNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@{card.cardNumber}"
                android:textColor="?attr/subTitleTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                tools:text="**** **** **** 1234" />

            <TextView
                android:id="@+id/tvHolderName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{card.holderName}"
                android:textColor="?attr/subTitleTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCardNumber"
                tools:text="OMAR K QADOMI" />


            <TextView
                android:id="@+id/tvExpiryDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{card.expiryDate}"
                android:textColor="?attr/titleTextColor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHolderName"
                tools:text="07/23" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
