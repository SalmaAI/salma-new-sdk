<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Salma.ContentLoadingProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">#FFD100</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!--    CardView Style-->
    <style name="Theme.Salma.CardView.OutComingMessage" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/outComingMessageBackgroundColor</item>
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="Theme.Salma.CardView.InComingMessage" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/inComingMessageBackgroundColor</item>
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
    </style>


</resources>